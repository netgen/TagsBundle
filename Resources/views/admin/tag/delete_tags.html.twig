{% extends eztags_admin.pageLayoutTemplate %}

{% trans_default_domain 'eztags_admin' %}

{% block content %}
    <h2 class="tag-title">{{ 'tag.delete_tags.title'|trans }}</h2>

    <p>{{ 'tag.delete_tags.message'|trans }}</p>

    <form method="post" action="{{ path('netgen_tags_admin_tag_delete_tags', {'parentId': parentTag is defined ? parentTag.id : 0}) }}">
        <table>
            <thead>
                <tr>
                    <th>{{ 'tag.title'|trans }}</th>
                </tr>
            </thead>

            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>
                        <input type="hidden" name="Tags[]" value="{{ tag.id }}"/>
                        {% if parentTag is defined %}{{ netgen_tags_tag_keyword(parentTag) }} / {% endif %}{{ netgen_tags_tag_keyword(tag) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="tags-actions">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('eztags_admin') }}" />
            <button type="submit" class="tags-btn tags-btn-primary" name="DeleteTagsButton">{{ 'tag.button.yes'|trans }}</button>

            {% if parentTag is defined %}
                {% set discardLink = path('netgen_tags_admin_tag_show', {'tagId': parentTag.id}) %}
            {% else %}
                {% set discardLink = path('netgen_tags_admin_dashboard_index') %}
            {% endif %}

            <a href="{{ discardLink }}" class="tags-btn">{{ 'tag.button.no'|trans }}</a>
        </div>
    </form>

{% endblock %}
